<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/default_16dp"
    android:clickable="false"
    android:paddingRight="@dimen/default_16dp"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        card_view:cardCornerRadius="4dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="@dimen/default_8dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/taskCheckpointName"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/body_text_1"
                android:layout_width="wrap_content"
                android:fontFamily="@string/font_normal"
                android:layout_height="wrap_content" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/checkpoint_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/default_16dp"
                android:src="@drawable/ic_action_camera"
            />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>